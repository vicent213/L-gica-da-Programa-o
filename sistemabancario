using System;
using System.Security.Authentication;

namespace SistemaBancario
{
    class App                                                                                                               //Métodos: Criar Conta, Listar Clientes, Depositar, Sacar, Consultar saldo
    {                                                                                                                       //Classes: Conta(Construtor feito aqui, toda vez que um cliente é feito,
                                                                                                                            //o construtor pega o molde que criamos
                                                                                                                            //
        static List<Cliente> contas = new List<Cliente>();
        static void Main()
        {
            bool sair = false;
            while (sair)
            {
                Console.WriteLine("Banco");
                Console.WriteLine("[1] - Criar Conta");
                Console.WriteLine("[2] - Listar CLientes");
                Console.WriteLine("[3] - Depositar");
                Console.WriteLine("[4] - Sacar");
                Console.WriteLine("[5] - Consultar saldo");
                Console.WriteLine("[0] - sair");
                int opcaoPrincipal = Convert.ToInt32(Console.ReadLine());
                switch (opcaoPrincipal)
                {
                    case 1:
                        CriarConta();
                        break;
                    case 2:
                        ListarClientes();
                        break;
                    case 3:
                        
                        break;
                    case 4:
                        
                        break;
                    case 5:
                        
                    case 0:
                        sair = true;
                        break;
                    default:
                        Console.WriteLine("Opção invalida!");
                        break;


                }
            }
        }

        static void CriarConta()
        {

            Console.WriteLine("Digite seu nome completo:");
            string nomeCompleto = Console.ReadLine();

            Console.WriteLine("Digite seu CPF:");
            string cpf = Console.ReadLine();

            string TipoConta = "";

            while (true)
            {
                Console.WriteLine("Qual tipo de conta bancaria deseja abrir?: 1- Conta corrente | 2- Conta Poupança ");
                int opcao = Convert.ToInt32(Console.ReadLine());

                if (opcao == 1)
                {
                    Console.WriteLine("Conta corrente selecionada!");
                    ContaCorrente();
                    break;
                }
                else if (opcao == 2)
                {
                    Console.WriteLine("Conta Poupança selecionada!");
                    ContaPoupanca();
                    break;
                }
                else
                {
                    Console.WriteLine("Nenhuma opção valida foi selecionada.");
                }

                

            }
            Cliente novoCliente = new Cliente(nomeCompleto, cpf, TipoConta);
            contas.Add(novoCliente);

            Console.WriteLine("Conta criada com sucesso!");


            static void ContaCorrente()
            {
                Console.WriteLine("Conta corrente:");

                Console.WriteLine("[3] - Depositar");
                Console.WriteLine("[4] - Sacar");
                Console.WriteLine("[5] - Consultar saldo");
                Console.WriteLine("[6] - Transferir");
                Console.WriteLine("[7] - sair");
            }
            static void ContaPoupanca()
            {
                Console.WriteLine("Conta Poupança:");

                Console.WriteLine("[3] - Depositar");
                Console.WriteLine("[4] - Sacar");
                Console.WriteLine("[5] - Consultar saldo");
                Console.WriteLine("[5] - sair");
            }
            

        }
             static void ListarClientes()
                            {
            Console.WriteLine("Lista de clientes:");
            if (contas.Count == 0) //se o numero de contas criadas for 0 
            {
                Console.WriteLine("Nenhuma conta cadastrada.");
            }
                             }
        class Cliente
        {
            static int contador = 1;

            int numeroConta;
            string nome;
            string cpf;
            string tipo;
            double saldo;

            //construtor
            public Cliente(string nomeCliente, string cpfCliente, string tipoConta)
            {
                numeroConta = contador++;
                nome = nomeCliente;
                cpf = cpfCliente;
                tipo = tipoConta;
                saldo = 0;

                void MostrarDados()
                {
                    Console.WriteLine($"Conta: {numeroConta}");
                    Console.WriteLine($"Nome: {nome}");
                    Console.WriteLine($"CPF: {cpf}");
                }
            }

            
        }
       class ContaBancaria
        {
            int numeroConta;
            string TipoConta;

            }
        }
